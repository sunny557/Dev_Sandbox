<aura:component >
    
    <aura:attribute name="input1" type="integer" required="true" description="For First Input"/>
    <aura:attribute name="input2" type="integer" required="true" description="For Second Input"/>
    <aura:attribute name="output" type="integer" required="true" description="For Output"/>
	
    <lightning:input type="number" value="{!v.input1}" label="Please Enter First Value" required="true" />
    <lightning:input type="number" value="{!v.input2}" label="Please Enter Second Value" required="true" />
    
    THe Output is: - {!v.output} <br/>
    <lightning:button variant="brand" value="Component Methods" label="Add" onclick="{!c.doAdd}"/>
    <lightning:button variant="brand" value="Component Methods" label="Sub" onclick="{!c.doSub}"/>
    <lightning:button variant="brand" value="Component Methods" label="Multiply" onclick="{!c.doMul}"/>
    <lightning:button variant="brand" value="Component Methods" label="Divide" onclick="{!c.doDiv}"/>
                        
</aura:component>